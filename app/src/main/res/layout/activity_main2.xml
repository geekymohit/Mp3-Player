<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohit.mp3player.Main2Activity">


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="79dp" />

    <Button
        android:id="@+id/btplay"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:text="Play"
        android:layout_alignTop="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:id="@+id/btFF"
        android:layout_width="62dp"
        android:layout_height="35dp"
        android:text="FF"
        android:layout_alignBottom="@+id/btplay"
        android:layout_toEndOf="@+id/btplay"
        android:layout_marginStart="14dp" />

    <Button
        android:id="@+id/btPP"
        android:layout_width="67dp"
        android:layout_height="35dp"
        android:text="FB"
        android:layout_alignBottom="@+id/btplay"
        android:layout_toStartOf="@+id/btplay"
        android:layout_marginEnd="15dp" />

    <Button
        android:id="@+id/btNxt"
        android:layout_width="71dp"
        android:layout_height="35dp"
        android:text="Next"
        android:layout_alignBottom="@+id/btplay"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btPrev"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:text="Prev"
        android:layout_alignBaseline="@+id/btPP"
        android:layout_alignBottom="@+id/btPP"
        android:layout_alignStart="@+id/seekBar" />
</RelativeLayout>
